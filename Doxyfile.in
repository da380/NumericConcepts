# Doxyfile Configuration Template

# --- Project Info ---
PROJECT_NAME           = "@PROJECT_NAME@"
PROJECT_NUMBER         = "@PROJECT_VERSION@"
PROJECT_BRIEF          = "A C++20 library defining concepts for numeric types"
STRIP_FROM_PATH        = "@CMAKE_SOURCE_DIR@"

# --- Output ---
OUTPUT_DIRECTORY       = "@CMAKE_CURRENT_BINARY_DIR@/doxygen"
CREATE_SUBDIRS         = YES
HTML_OUTPUT            = html
GENERATE_LATEX         = NO
USE_MDFILE_AS_MAINPAGE = @CMAKE_SOURCE_DIR@/docs/mainpage.md

# --- Input ---
INPUT                  = "@CMAKE_SOURCE_DIR@/include" \
                         "@CMAKE_SOURCE_DIR@/examples" \
                         "@CMAKE_SOURCE_DIR@/docs"
RECURSIVE              = YES
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = YES
EXTRACT_STATIC         = YES

# --- Graphics (optional, but recommended) ---
HAVE_DOT               = YES
CALL_GRAPH             = YES
CALLER_GRAPH           = YES